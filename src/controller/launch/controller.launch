<?xml version="1.0"?>
<launch>
    <!-- Controller args -->
    <arg name="detector" default="True" doc="Run detector service" />
    <arg name="move_head" default="True" doc="Run move head service" />
    <arg name="speech" default="True" doc="Run speech service" />

    <!-- Detector args-->
    <arg name="model" default="ssd_mobilenet_v2_320x320_coco17_tpu-8/saved_model" doc="Path to the model" />
    <arg name="publish_bb" default="True" doc="Publish the detected image" />
    <arg name="topic" default="True" doc="Run speech service" />

    <!-- name node (and topic) after parameter file -->
    <node name="controller" pkg="controller" type="controller.py"  output="screen" args="-d=$(arg detector) -mh=$(arg move_head) -s=$(arg speech)"></node> 

    
</launch>