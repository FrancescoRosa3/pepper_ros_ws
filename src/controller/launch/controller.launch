<?xml version="1.0"?>
<launch>

    <!-- Controller args -->
    <arg name="detector" default="True" doc="Run detector service" />
    <arg name="move_head" default="True" doc="Run move head service" />
    <arg name="speech" default="True" doc="Run speech service" />

    <!-- Detector args-->
    <arg name="model" default="ssd_mobilenet_v2_320x320_coco17_tpu-8/saved_model" doc="Path to the model" />
    <arg name="publish_bb" default="True" doc="Publish the detected image" />
    <arg name="topic" default="/pepper_robot/camera/front/camera/image_raw" doc="Camera topic" />
    <arg name="frame" default="1" doc="Number of iteration"/>

    <!-- launch controller node -->
    <node name="controller" pkg="controller" type="controller.py"  output="screen" args="-d=$(arg detector) -mh=$(arg move_head) -s=$(arg speech)"></node> 
    
     <!-- launch detector node -->
    <node name="detector" pkg="detection_srv" type="detector_srv.py"  output="screen" args="-m=$(arg model) -p=$(arg publish_bb) -t=$(arg topic) -f=$(arg frame)"></node> 
    
    <!-- launch pepper_talk node-->
    <arg name="D" value="/home/ciccio/Robotica_Cognitiva/pepper_ros/src/pynaoqi-python2.7-2.5.7.1-linux64"/>
    <env name="PYTHONPATH" value="$(env PYTHONPATH):$(arg D)/lib/python2.7/site-packages" />
    <arg name="nao_ip" value="10.0.1.230"/>
    <node name="pepper_talk" pkg="pepper_talk" type="pepper_talk_node.py"  output="screen" args="--pip=$(arg nao_ip)"></node> 

    <!-- launch move_head node -->
    <node name="move_head" pkg="move_head" type="head_movement.py"  output="screen" ></node> 
    

</launch>